# ------------------------------------------------------------------------------
# SiteLog / InvenTree docker-compose environment
# Copy this file to `.env` and adjust values before running scripts/bootstrap_env.sh
# ------------------------------------------------------------------------------

# Docker tags
INVENTREE_TAG=stable

# Django + API basics
INVENTREE_DEBUG=True
INVENTREE_ALLOWED_HOSTS=localhost,127.0.0.1
INVENTREE_SITE_URL=http://localhost
INVENTREE_SERVER=http://inventree-server:8000
INVENTREE_SECRET_KEY=replace-this-secret-key

# Database (PostgreSQL)
INVENTREE_DB_ENGINE=postgresql
INVENTREE_DB_HOST=inventree-db
INVENTREE_DB_NAME=sitelog
INVENTREE_DB_USER=sitelog
INVENTREE_DB_PASSWORD=super-secret-password
INVENTREE_DB_PORT=5432

# Redis cache
INVENTREE_CACHE_PORT=6379

# Reverse proxy ports
INVENTREE_HTTP_PORT=8080
INVENTREE_HTTPS_PORT=8443

# Data volume (absolute path recommended)
INVENTREE_EXT_VOLUME=./inventree-data

# Optional default superuser bootstrap (used by invoke superuser when non-interactive)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=ChangeMe123!
