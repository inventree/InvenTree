# ----------------------------
# InvenTree Docker Environment
# ----------------------------

# Project name (used by Docker Compose)
COMPOSE_PROJECT_NAME=inventree

# Version tag - use 'stable' for reliability
INVENTREE_TAG=stable

# Site URL for local use
# Youâ€™ll access it via: http://localhost
INVENTREE_SITE_URL="http://localhost"

# Proxy forwarding settings (keep True)
INVENTREE_USE_X_FORWARDED_HOST=True
INVENTREE_USE_X_FORWARDED_PORT=True
INVENTREE_USE_X_FORWARDED_PROTO=True

# External volume for data persistence
# Creates folder 'inventree-data' inside your project directory
INVENTREE_EXT_VOLUME=./inventree-data

# Logging level (keep WARNING for less noise)
INVENTREE_LOG_LEVEL=WARNING

# Enable custom plugins (optional, keep True)
INVENTREE_PLUGINS_ENABLED=True

# Run automatic migrations when container starts (keep True)
INVENTREE_AUTO_UPDATE=True

# ----------------------------
# Database configuration
# ----------------------------
INVENTREE_DB_ENGINE=postgresql

# Default Postgres settings (you can keep as-is)
INVENTREE_DB_HOST=inventree-db
INVENTREE_DB_PORT=5432
INVENTREE_DB_NAME=inventree
INVENTREE_DB_USER=inventree
INVENTREE_DB_PASSWORD=inventree

# ----------------------------
# Cache (Redis)
# ----------------------------
INVENTREE_CACHE_HOST=inventree-cache
INVENTREE_CACHE_PORT=6379

# ----------------------------
# Allowed hosts
# ----------------------------
INVENTREE_ALLOWED_HOSTS=localhost,127.0.0.1

